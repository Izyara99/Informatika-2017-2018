#include <iostream>
#include <conio.h>

using namespace std;

int main(){
	int pil,s,r,ts;
	double hasil;

	cout << "Menu : \n";
	cout << "1. Volume Kubus\n";
	cout << "2. Luas Lingkaran\n";
	cout << "3. Volume Silinder\n";
	cout << "Inputkan pilihan anda <1-3> : "; cin >> pil;
	cout << endl;
	switch(pil){
	case 1:
		cout << "Volume Kubus\n";
		cout << "Inputkan Sisi Kubus = "; cin >> s;
		hasil = s*s*s;
		cout << "Hasilnya adalah     = " << hasil;
		break;
	case 2:
		cout << "Luas Lingkaran\n";
		cout << "Inputkan Jari-Jari Lingkaran = "; cin >> r;
		hasil = 3.15*r*r;
		cout << "Hasilnya adalah              = " << hasil;
		break;
	case 3:
		cout << "Volume Silinder \n";
		cout << "Inputkan Jari-Jari Silinder = "; cin >> r;
		cout << "Inputkan Tinggi Silinder    = "; cin >> ts;
		hasil = 3.15*r*r*ts;
		cout << "Hasilnya adalah             = " << hasil;
		break;
	default:
		cout << "Maaf yang anda Inputkan Tidak ada!";	
	}
	getch();
}
